<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iveci.mad2.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linchi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chicken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                app:srcCompat="@drawable/chicken" />

            <TextView
                android:id="@+id/tdchik"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:textSize="25dp"
                android:text="이것은 치킨이다." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linspa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spagetti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                app:srcCompat="@drawable/spag" />

            <TextView
                android:id="@+id/tdspag"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="50dp"
                android:textSize="25dp"
                android:text="이것은 스파게티이다." />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
